{
    "version": 5,
    "beforeBuildTasks": [],
    "afterBuildTasks": [],
    "global": {
        "data-mode": "medium",
        "code-mode": "small",
        "printf-formatter": "tiny",
        "scanf-formatter": "small",
        "math-functions": "default",
        "output-debug-info": "enable"
    },
    "c/cpp-compiler": {
        "optimization": "no",
        "runtime-lib": "normal",
        "destroy-cpp-static-object": true,
        "language-c": "c99",
        "language-cpp": "Extended-EC++",
        "language-conformance": "IAR-extensions",
        "virtual-bytes": "16"
    },
    "asm-compiler": {
        "case-sensitive-user-symbols": true
    },
    "linker": {
        "output-format": "elf",
        "linker-config": "lnkstm8s003f3.icf",
        "auto-search-runtime-lib": true,
        "use-C_SPY-debug-lib": true,
        "config-defines": [
            "_CSTACK_SIZE=0x0100",
            "_HEAP_SIZE=0x0000"
        ],
        "merge-duplicate-sections": true
    }
}